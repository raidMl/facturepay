<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>مولد الفواتير الديناميكي</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/history.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/pub.css">
    <style>

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            overflow-x: hidden;
        }

        header {
            background: linear-gradient(to right, #2d48dfee, #350d91f5);
            color: #fff;
            padding: 20px;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

        nav {
            display: flex;
            justify-content: space-between;
            background-color: #333;
            padding: 10px 0;
        }

        nav a ,nav div  {
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            margin: 0 10px;
            transition: background-color 0.3s ease, border-radius 0.3s ease;
        }

        nav a:hover {
            background-color: #444;
            border-radius: 5px;
        }
  .input1 input{
    max-width: 150px;
  }

        @media (max-width: 568px) {
            nav {
                flex-direction: column;
            }
    
            nav a {
                margin: 10px 0;
            }}
    </style>
</head>
<body>
    <nav dir="rtl">
        <a href="/admin"><i class="fas fa-home"></i> الرئيسية</a>

        <div>
        <a href="/adminProfile"><i class="fas fa-user"></i>الحساب الشخصي</a>

        <a href="/api/auth/logout"><i class="fas fa-sign-out-alt"></i>  الخروج</a>
    </div>
    </nav>
    <div class="invoice-container">
        <div class="invoice-header" style="text-align: center;">
            <div>
                <input dir="rtl" type="text" placeholder="ابحث..." style="padding: 6px 20px;" onchange="filterByName()">
            </div>
            <div><h2 style="font-size: 19px;">سجلات العملاء</h2></div>
        </div>
        <div class="invoice-body">
            <table dir="rtl">
                <thead>
                    <tr>
                        <th> الرقم</th>
                        <th> اللقب</th>
                        <th>الاسم </th>
                        <th>المكان</th>
                        <th>الهاتف</th>
                        <th>البريد الالكتروني</th>
                        <th>حذف</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                    <!-- Data will be fetched from /api/facture/payed endpoint -->
                </tbody>
            </table>
        </div>
    </div>

  

    <script>
        function deleteUser(id) {
            if (confirm('هل أنت متأكد من حذف هذه الفاتورة؟')) {
                fetch(`/api/admin/removeUser/${id}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to delete invoice');
                    }
                    alert('تم حذف الفاتورة بنجاح');
                    // Optionally update the UI after successful deletion (remove row from table)
                    location.reload(); // Example: Reload the page after deletion
                })
                .catch(error => {
                    console.error('Delete error:', error);
                    alert('فشل حذف الفاتورة');
                });
            }
        }

        // Fetch data from /api/facture/payed endpoint
        fetch('/api/admin/getusers')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                const tableBody = document.getElementById('table-body');
                data.forEach(item => {
                    console.log(item);
                    const row = `
                        <tr class="single-row" dir="rtl">
                            <td><input type="number" value="${item.id}" class="unit" disabled></td>
                            <td><input type="text" value="${item.nom}" class="product right" disabled></td>
                            <td><input type="text" value="${item.prenom}" class="product right" disabled></td>
                            <td><input type="text" value="${item.adresse  }" class="product" disabled></td>
                            <td  class="input1"><input type="text" value="${item.telephone}" class="amount" disabled></td>
                            <td  class="input1"><input type="text" value="${item.email}" class="unit" disabled></td>

                            <td><button class="material-icons" onclick="deleteUser(${item.id})">delete_outline</button></td>
                        </tr>
                    `;
                    tableBody.innerHTML += row;
                });
            })
            .catch(error => {
                console.error('Error fetching data:', error);
                alert('حدث خطأ أثناء جلب البيانات');
            });

        function filterByName() {
            const input = document.querySelector('input[type="text"]');
            const filter = input.value.toUpperCase();
            const rows = document.querySelectorAll('.single-row');
            rows.forEach(row => {
                const productName = row.querySelector('.product').value.toUpperCase();
                if (productName.indexOf(filter) > -1) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
