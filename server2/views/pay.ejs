    input[type="text"],
    input[type="number"],
    input[type="date"],
    select {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }
    
    button {
        padding: 12px 20px;
        font-size: 16px;
        background: linear-gradient(to right, #2d48dfee, #350d91f5);
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    
    button:hover {
        background-color: #555;
    }
    
