<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/pub.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

  <title>الملف الشخصي</title>
  <style>
  
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(to right, #2d48df27, #2e0d7a00);
    }
    
    .profile-container {
      max-width: 600px;
      width: 100%;
      padding: 20px;
    }
    
    .profile-card {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      animation: slideIn 0.5s ease forwards;

    }
    @keyframes slideIn {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    .avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      display: block;
      margin: 20px auto;
      background-color: #ccc; /* Placeholder color */
      /* You can use background-image property to set user's image */
    }
    
    .user-info {
      text-align: center;
    }
    
    .user-name {
      font-size: 24px;
      font-weight: bold;
      color: #222222;
      margin-bottom: 10px;
    }
    
    .user-details {
      text-align: right;
      padding: 0 20px;
    }
    
    .user-details p {
      margin-bottom: 10px;
      letter-spacing: 1.2px;
      color: rgb(71, 71, 68);
    }
    .user-details p strong {
      color: #222222;
    }

    .account-info {
      margin-top: 20px;
    }
    .footer {
      display: flex;
      justify-content: space-around;
      align-items: center;
      background-color: #fff;
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 10px 0;
      box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="profile-container">
    <div class="profile-card">
      <img src="images/user.png" alt="User Avatar" class="avatar">
      <div class="user-info" dir="rtl">
        <h2 class="user-name"><%= user.nom %> <%= user.prenom %></h2>
        <div class="user-details">
          <p><strong>الاقامة:</strong> <%= user.adresse %></p>
          <p><strong>الهاتف:</strong> <%= user.telephone %></p>
          <p><strong>الايمايل:</strong> <%= user.email %></p>
          <p><strong>الدور:</strong> <%= user.role %></p>
          <h3>معلومات حول الحساب:</h3>
          
          <div id="compteInfo" class="account-info">
            <!-- Account information will be populated dynamically -->
          </div>
        </div>
      </div>
    </div>


  <div style="position:fixed;bottom:0;margin :0;width:100%">
  <div class="footer">
    <a href="./main" class="profile">
        <i class="fas fa-home"></i>
        <p>الصفحة الرئيسية</p>
    </a>

    <a href="./history" class="profile">
        <i class="fa fa-history" aria-hidden="true"></i>
        <p>السجلات</p>
    </a>

    <a href="" class="profile activeprofile">
        <i class="fas fa-user"></i>
        <p>ملفي الشخصي</p>
    </a>
</div>
</div>
<script>
  var myCompteInfo={numero:0,cvv:0,date_expiration:0,solde:0}
  var info=document.getElementById('compteInfo');
  fetch('api/pay/payment').then(res=>{
  
      
   //console.log(res.json);
   
    return res.json();
  }).then(data=>{
   myCompteInfo= data.userInfo[0][0]

   info.innerHTML=
   `<p><strong> رقم الحساب :</strong> ${myCompteInfo.numero}</p>`
    +`<p><strong>الرقم السري:</strong> ${myCompteInfo.cvv}</p>`
    +`<p><strong> تاريخ النهاية :</strong> ${myCompteInfo.date_expiration}</p>`
    +`<p><strong>الرصيد:</strong> ${myCompteInfo.solde}  دينار</p>`


  }).catch(err=>{
    console.log(err)})
 
</script>
</body>
</html>
